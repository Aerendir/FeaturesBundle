{
    "name": "serendipity_hq/bundle-features",
    "description": "Manage features and plans in your Symfony app.",
    "type": "symfony-bundle",
    "keywords": ["pricing", "plans", "paid", "features gating"],
    "homepage": "https://github.com/Aerendir/bundle-features",
    "license": "MIT",
    "support": {
        "docs": "https://github.com/Aerendir/bundle-features/tree/dev/docs",
        "issues": "https://github.com/Aerendir/bundle-features/issues"
    },
    "authors": [
        {
            "name": "Adamo Aerendir Crespi",
            "email": "hello@aerendir.me"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-intl": "*",
        "ext-json": "*",
        "doctrine/common": "^2.5 || ^3.0",
        "doctrine/doctrine-bundle": "^1.8 || ^2.0",
        "doctrine/orm": "^2.5",
        "serendipity_hq/component-array-writer": "dev-dev",
        "serendipity_hq/component-value-objects": "dev-dev",
        "symfony/form": "^4.4|^5.1",
        "symfony/framework-bundle": "^4.4|^5.1",
        "symfony/options-resolver": "^4.4|^5.1",
        "symfony/routing": "^4.4|^5.1",
        "symfony/translation": "^4.4|^5.1",
        "thecodingmachine/safe": "^1.0"
    },
    "require-dev": {
        "ext-ast": "*",
        "bamarni/composer-bin-plugin": "^1.4",
        "roave/security-advisories": "dev-master",
        "serendipity_hq/component-text-matrix": "dev-dev",
        "symfony/var-dumper": "^4.4|^5.1"
    },
    "suggest": {
        "serendipity_hq/component-text-matrix": "Allows tho use of PlainTextDrawer."
    },
    "autoload": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\FeaturesBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SerendipityHQ\\Bundle\\FeaturesBundle\\Tests\\": "tests"
        }
    },
    "config":{
        "sort-packages": true
    },
    "scripts": {
        "bin": "echo 'bin not installed'",
        "post-install-cmd": ["@composer bin all install --ansi"],
        "post-update-cmd": ["@composer bin all update --ansi"]
    }
}
